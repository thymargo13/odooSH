<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_acquirer_view_form_inherit_fps" model="ir.ui.view">
        <field name="name">payment.acquirer.view.form.inherit.fps</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.acquirer_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="acquirer"]' position='inside'>
                <group attrs="{'invisible': [('provider', '!=', 'fps')]}">
                    <field name="fps_secret_key" attrs="{'required':[ ('provider', '=', 'fps'), ('state', '!=', 'disabled')]}" password="True"/>
                    <field name="fps_source_sys_code" attrs="{'required':[ ('provider', '=', 'fps'), ('state', '!=', 'disabled')]}"/>
                    <field name="fps_group_code" attrs="{'required':[ ('provider', '=', 'fps'), ('state', '!=', 'disabled')]}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
